{
  "name": "space.game",
  "watch": {
    "prettier": {
      "runOnChangeOnly": false,
      "extensions": "gml",
      "patterns": [
        "**.gml"
      ]
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "prettier": "npx prettier --config .prettierrc --write **.gml"
  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "prettier": "3.2.4",
    "prettier-plugin-gml": "0.1.3"
  }
}
